<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <EditText
        android:id="@+id/child_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:hint="Enter child's name"
        android:padding="12dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    
    <TextView
        android:id="@+id/select_age_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Age"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="137dp"
        app:layout_constraintTop_toBottomOf="@id/child_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/age_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="15dp"
        android:src="@drawable/circle_image"
        app:layout_constraintTop_toBottomOf="@+id/select_age_label"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/age_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="22dp"
        app:layout_constraintTop_toTopOf="@id/age_3"
        app:layout_constraintStart_toStartOf="@id/age_3"
        app:layout_constraintEnd_toEndOf="@id/age_3"
        app:layout_constraintBottom_toBottomOf="@id/age_3"/>

    <Button
        android:id="@+id/continue_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="188dp"
        android:backgroundTint="@color/primary"
        android:text="Continue"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/child_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
